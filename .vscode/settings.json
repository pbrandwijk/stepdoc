{
    "files.autoSave": "afterDelay",
    "editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.wordWrap": "wordWrapColumn",
	"editor.wordWrapColumn": 80,
	"cSpell.language": "en",
	"cSpell.customDictionaries": {
		"dictionary": {
			"name": "dictionary",
			"path": "${fileDirname}/../.cspell/dictionary.txt",
			"addWords": true,
			"scope": "workspace",
		}
	},
}
